{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "preserve",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "allowJs": true,
    "outDir": "./dist-tsc",
    "lib": [
      "es6",
      "dom"
    ],
    "rootDir": "lib",
    "moduleResolution": "node",
    "jsxImportSource": "solid-js",
    "types": [
      "solid-js",
      // "solid-js/dom"
    ]
  },
  "include": [
    "lib/**/*.ts*"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}